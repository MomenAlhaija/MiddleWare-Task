@model test2.Models.item
@{
    ViewData["Title"] = "Delete";
}



@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Item</h2>
            <hr />
        </div>
    </div>
    <div class="mb-3">
        <label>Name</label>

        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Price</label>

        <input asp-for="price" class="form-control" name="Price" />
    </div>
    <div class="mb-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-for="CategoryId" disabled asp-items="@ViewBag.SelectList">
        </select>
        <span asp-validation-for="CategoryId"></span>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-controller="items" class="btn btn-primary">Back To List</a>

</form>

