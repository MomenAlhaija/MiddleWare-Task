@model Person 
<form method="post"> 
    <table>

    <tr>
        <td>
            <label asp-for="@Model.FirstName"></label>
        </td>
        <td>
            <input type="text" asp-for="@Model.FirstName" />
        </td>
    </tr>
    <tr>
        <td>
            <label asp-for="@Model.LastName"></label>
        </td>
        <td>
            <input type="text" asp-for="@Model.LastName" />
        </td>
    </tr>
    <tr>
        <td>
            <label asp-for="@Model.Age"></label>
        </td>
        <td>
            <input type="number" asp-for="@Model.Age" />
        </td>
    </tr>
    <tr>
        <td>
            <label asp-for="@Model.DateOfBirth"></label>
        </td>
        <td>
            <input type="date" asp-for="@Model.DateOfBirth" />
        </td>
    </tr>
    <tr>
        <td>
            <label asp-for="@Model.Password"></label>
        </td>
        <td>
            <input type="password" asp-for="@Model.Password" />
        </td>
    </tr>
    <tr>
       <td>
           <label asp-for="@Model.ConfirmPassword"></label>
        </td>
        <td>
            <input type="password" asp-for="@Model.ConfirmPassword" />
        </td>
    </tr>
    <tr>
        <td>
            <label asp-for="@Model.Email"></label>
        </td>
        <td>
            <input type="text" asp-for="@Model.Email" />
        </td>
    </tr>
    <tr>
        <td>
        <label asp-for="@Model.Phone"></label>
        </td>
        <td>
            <input type="text" asp-for="@Model.Phone" />
        </td>
    </tr>
    <tr>
        <td>
            <label asp-for="@Model.Address"></label>
        </td>
        <td>
            <input type="text" asp-for="@Model.Address" />
        </td>
    </tr>
    </table>
    <br />
    <div class="d-flex" style="padding-left:50px;">
        <button type="submit" class="btn btn-success">Add</button>
        <a href="/Person" class="btn btn-info">Back to List</a>
    </div>
</form>
