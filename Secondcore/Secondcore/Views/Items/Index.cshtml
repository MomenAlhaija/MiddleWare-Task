@model IEnumerable<Item> 
@{
    ViewData["Title"] = "Index";
}
<h3 style="text-align:center;color:green">@TempData["SuccessData"]</h3>
<div class="container p-3">
    <div class="row pt-6">
        <div class="col-6">
            <h2 class="text-primary">Items View</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Items" asp-action="Add" class="btn btn-primary">Add item</a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped table-hover" style="width:100%">
    <thead>
        <tr>
            <th>
                Item Name
            </th>
            <th>
                Item Price
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td width="50%">
                    @item.Name
                </td>
                <td width="30%">
                    @item.Price
                </td>
                <td>
                    <a asp-controller="Items" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>

                    <a asp-controller="Items" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
