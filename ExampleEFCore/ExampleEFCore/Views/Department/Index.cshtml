@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<table>
   <thead>
       <tr>
           ID
       </tr>
       <tr>
           Name
       </tr>

   </thead>
   <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a href="/Department/Update/@item.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
